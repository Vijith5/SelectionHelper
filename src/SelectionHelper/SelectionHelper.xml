<?xml version="1.0" encoding="utf-8" ?>
<widget id="SelectionHelper.widget.SelectionHelper" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>SelectionHelper</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
		<property key="listEntity" type="entity" required="false">
            <caption>List entity</caption>
            <category>Behavior</category>
            <description>The type of object in the list</description>
		</property>
        <property key="dataSourceMF" type="microflow" required="false">
            <caption>Data source Microflow</caption>
            <category>Behavior</category>
            <description>An optional microflow to retrieve the object you want pre-selected. If not selected, the widget will use the context entity.</description>
			<returnType type="Object" entityProperty="listEntity"/>
		</property>
    </properties>
</widget>

